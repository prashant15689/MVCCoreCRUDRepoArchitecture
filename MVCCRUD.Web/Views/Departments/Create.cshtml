@model MVCCRUD.Models.ViewModels.DepartmentVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DepartmentVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <span id="Errors" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label"></label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" onclick="return Validate()"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script type="text/javascript">
    function Validate() {
        var message = "";
        if (document.getElementById("DepartmentName").value === "") {
            message += "<ul><li>Department name can't be balnk.</li>";
        }
        if (document.getElementById("Description").value === "") {
            message += "<li>Description can't be balnk.</li></ul>";
        }
        if (message !== "") {
            document.getElementById("Errors").innerHTML = message;
            return false;
        }
        return true;
    }
</script>

